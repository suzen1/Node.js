<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>index.js</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
    <div class="main w-full min-h-screen bg-zinc-700">
        <div class="from p-10 text-white gap-4">
            <form action="/create" method="POST">
                <input type="text" placeholder="Enter your name"
                    class="capitalize px-2 w-full bg-white outline-none text-black block rounded-md mb-2" name="title">
                <textarea name="message"
                    class=" capitalize bg-white text-black resize-none block rounded-md w-full outline-none px-2"
                    placeholder="message"></textarea>
                <button class="bg-blue-600 text-black rounded-full px-1 py-1.5 mt-2" type="submit">click me</button>
            </form>
        </div>
        <div class="tasks p-10 flex flex-wrap gap-4 justify-center capitalize">
            <% if (files.length> 0) { %>
                <% files.forEach(function(file) { %>
                    <div class="task w-[20vw] px-3 py-4 bg-sky-500 rounded-md">
                        <h1 class="font-bold text-white">
                            <%= file.title %>
                        </h1>

                        <a href="/read/<%= file.title %>" class="text-black underline">Read me..</a>
                        <a href="/edit?task=<%= file.title %>" class="text-black underline">Edit me..</a>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <h1 class="text-white">No tasks found.</h1>
                            <% } %>
        </div>
    </div>

    <script src="/javascript/script.js"></script>
</body>

</html>